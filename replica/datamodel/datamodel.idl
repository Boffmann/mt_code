module RevPiDDS {

  struct Input {
    long id;
    sequence<char> data;
  };
  #pragma keylist Input id
  
  struct AppendEntries {
    long term;
    long senderID;
    long id;
    // TODO die anderen replicas k√∂nnen auch direkt aus dem Input topic lesen
    sequence<char> entries;
  };
  #pragma keylist AppendEntries term

  struct AppendEntriesReply {
    long senderID;
    long id;
    long term;
    boolean success;
  };
  #pragma keylist AppendEntriesReply

  struct RequestVote {
    long term;
    long senderID;
  };
  #pragma keylist RequestVote

  struct RequestVoteReply {
    long senderID;
    long term;
    long candidateID;
    boolean voteGranted;
  };
  #pragma keylist RequestVoteReply

  struct ReplicaResult {
    long senderID;
    long temp;
  };
  #pragma keylist ReplicaResult

  struct ActivateSpare {
    long term;
    boolean activate;
  };
  #pragma keylist ActivateSpare

  struct Balise {
    short ID;
    short groupID;
    short numberInGroup;
  };
  #pragma keylist Balise ID groupID

  struct BaliseGroup {
    short ID;
    long position;
  };
  #pragma keylist BaliseGroup ID

  struct TrainState {
    double position;
    float speed;
    unsigned long long lastUpdateTime;
  };
  #pragma keylist TrainState

  // TODO Train State
  // TODO Movement Authority

};
